@using Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>

    <!-- Boxicons -->
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- My CSS -->
    <link rel="stylesheet" href="~/css/style.css" />

    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
    <!-- SIDEBAR -->
    <section id="sidebar">
        <a href="#" class="brand">
            <i class='bx bxs-shield-plus'></i>
            <span class="text">Admin Panel</span>
        </a>
        <ul class="side-menu top ps-0">
            <li>
                <a asp-area="Admin" asp-controller="Admin" asp-action="Statistics"
                    class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Admin" && ViewContext.RouteData.Values["Action"]?.ToString() == "Statistics" ? "active" : "")">
                    <i class='bx bx-grid-alt'></i>
                    <span class="text">Thống kê</span>
                </a>

            </li>
            <li>
                <a asp-area="Admin" asp-controller="Appointments" asp-action="Index"
                    class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Appointments" ? "active" : "")">
                    <i class='bx bx-calendar-check'></i>
                    <span class="text">Quản lý Lịch hẹn</span>
                </a>

            </li>
            <li>
                <a asp-area="Admin" asp-controller="Branches" asp-action="Index"
                    class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Branches" ? "active" : "")">
                    <i class='bx bxs-building-house'></i>
                    <span class="text">Quản lý Chi nhánh</span>
                </a>
            </li>
            <li>
                <a asp-area="Admin" asp-controller="Departments" asp-action="Index"
                    class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Departments" ? "active" : "")">
                    <i class='bx bxs-building'></i>
                    <span class="text">Quản lý Khoa/Phòng</span>
                </a>
            </li>
            <li>
                <a asp-area="Admin" asp-controller="Doctors" asp-action="Index"
                    class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Doctors" ? "active" : "")">
                    <i class='bx bxs-user'></i>
                    <span class="text">Quản lý Bác sĩ</span>
                </a>
            </li>
            <li>
                <a href="http://localhost:2000/PackagesAdmin"
                    class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Packages" ? "active" : "")">
                    <i class='bx bxs-package'></i>
                    <span class="text">Quản lý Gói khám</span>
                </a>
            </li>
            <li>
                <a asp-area="Admin" asp-controller="Patients" asp-action="Index"
                    class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Patients" ? "active" : "")">
                    <i class='bx bxs-user-plus'></i>
                    <span class="text">Quản lý Bệnh nhân</span>
                </a>
            </li>
            <li>
                <a asp-area="Admin" asp-controller="Specialties" asp-action="Index"
                    class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Specialties" ? "active" : "")">
                    <i class='bx bxs-first-aid'></i>
                    <span class="text">Quản lý Chuyên khoa</span>
                </a>
            </li>
            <li>
                <a asp-area="Admin" asp-controller="Users" asp-action="Index"
                    class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Users" ? "active" : "")">
                    <i class='bx bxs-group'></i>
                    <span class="text">Quản lý Người dùng</span>
                </a>
            </li>
        </ul>
        <ul class="side-menu ps-0">
            <li>
                <a asp-area="Admin" asp-controller="Settings" asp-action="Index"
                    class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Settings" ? "active" : "")">
                    <i class='bx bxs-cog'></i>
                    <span class="text">Cài đặt</span>
                </a>
            </li>
            <li>
                <a href="#" class="logout" id="logout-link">
                    <i class='bx bxs-log-out-circle'></i>
                    <span class="text">Đăng xuất</span>
                </a>
                <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout"
                    asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" style="display: none;"></form>
            </li>
        </ul>
    </section>
    <!-- SIDEBAR -->

    <!-- CONTENT -->
    <section id="content">
        <!-- NAVBAR -->
        <nav>
            <i class='bx bx-menu'></i>
            <form asp-action="Search" method="get">
                <div class="form-input">
                    <input type="search" name="searchString" placeholder="Search...">
                    <button type="submit" class="search-btn"><i class='bx bx-search'></i></button>
                </div>
            </form>
            <input type="checkbox" id="switch-mode" hidden>
            <label for="switch-mode" class="switch-mode"></label>
            <a href="#" class="notification">
                <i class='bx bxs-bell'></i>
                <span class="num">8</span>
            </a>
            <a asp-area="Identity" asp-page="/Account/Manage/Index" class="profile">
                <img src="~/img/people.png" alt="Profile">
            </a>
        </nav>
        <!-- NAVBAR -->

        <!-- MAIN CONTENT -->
        <main>
            <div class="head-title">
                <div class="left">
                    <h1>@ViewData["Title"]</h1>
                    <ul class="breadcrumb">
                        <li>
                            <a href="#">Bảng điều khiển</a>
                        </li>
                        <li><i class='bx bx-chevron-right'></i></li>
                        <li>
                            <span class="active">@ViewContext.RouteData.Values["Controller"]?.ToString()</span>
                        </li>
                    </ul>
                </div>
            </div>
            @RenderBody()
        </main>
        <!-- MAIN CONTENT -->
    </section>
    <!-- CONTENT -->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/script.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
