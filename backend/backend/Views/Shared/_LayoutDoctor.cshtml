@using Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Doctor Portal</title>

    <!-- Boxicons -->
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <!-- My CSS -->
    <link rel="stylesheet" href="~/css/admin.css" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- SIDEBAR -->
    <section id="sidebar">
        <a href="#" class="brand">
            <i class='bx bxs-first-aid'></i>
            <span class="text">Doctor Portal</span>
        </a>
        <ul class="side-menu top">
            <!-- Vấn đề đã được sửa ở đây: class "active" được đặt trên <li> thay vì <a> -->
            <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Dashboard" ? "active" : "")">
                <a asp-area="Doctor" asp-controller="Dashboard" asp-action="Index">
                    <i class='bx bxs-dashboard'></i>
                    <span class="text">Tổng quan</span>
                </a>
            </li>
            <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Schedule" ? "active" : "")">
                <a asp-area="Doctor" asp-controller="Schedule" asp-action="Index">
                    <i class='bx bxs-calendar-edit'></i>
                    <span class="text">Lịch làm việc</span>
                </a>
            </li>
            <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Appointments" ? "active" : "")">
                <a asp-area="Doctor" asp-controller="Appointments" asp-action="Index">
                    <i class='bx bxs-calendar-check'></i>
                    <span class="text">Lịch hẹn</span>
                </a>
            </li>
            <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Patients" ? "active" : "")">
                <a asp-area="Doctor" asp-controller="Patients" asp-action="Index">
                    <i class='bx bxs-user-rectangle'></i>
                    <span class="text">Bệnh nhân của tôi</span>
                </a>
            </li>
            <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "MedicalRecords" ? "active" : "")">
                <a asp-area="Doctor" asp-controller="MedicalRecords" asp-action="Index">
                    <i class='bx bxs-file-blank'></i>
                    <span class="text">Hồ sơ Bệnh án</span>
                </a>
            </li>
            <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Reviews" ? "active" : "")">
                <a asp-area="Doctor" asp-controller="Reviews" asp-action="Index">
                    <i class='bx bxs-star'></i>
                    <span class="text">Đánh giá</span>
                </a>
            </li>
        </ul>
        <ul class="side-menu">
            <li>
                <a asp-area="Doctor" asp-controller="Profile" asp-action="Index">
                    <i class='bx bxs-cog'></i>
                    <span class="text">Hồ sơ cá nhân</span>
                </a>
            </li>
            <li>
                <a href="#" onclick="event.preventDefault(); document.getElementById('logout-form-doctor').submit();" class="logout">
                    <i class='bx bxs-log-out-circle'></i>
                    <span class="text">Đăng xuất</span>
                </a>
                <form id="logout-form-doctor" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" style="display: none;"></form>
            </li>
        </ul>
    </section>
    <!-- SIDEBAR -->
    <!-- CONTENT -->
    <section id="content">
        <!-- NAVBAR -->
        <nav>
            <i class='bx bx-menu'></i>
            <a href="#" class="nav-link">Categories</a>
            <input type="checkbox" id="switch-mode" hidden>
            <label for="switch-mode" class="switch-mode"></label>
            <a href="#" class="notification">
                <i class='bx bxs-bell'></i>
                <span class="num">3</span>
            </a>
            <a asp-area="Doctor" asp-controller="Profile" asp-action="Index" class="profile">
                <img src="~/img/people.png" alt="Profile">
            </a>
        </nav>
        <!-- NAVBAR -->
        <!-- MAIN -->
        <main>
            <!-- Cấu trúc Head Title giống với file CSS gốc -->
            <div class="head-title">
                <div class="left">
                    <h1>@ViewData["Title"]</h1>
                    <ul class="breadcrumb">
                        <li>
                            <a href="#">Doctor</a>
                        </li>
                        <li><i class='bx bx-chevron-right'></i></li>
                        <li>
                            <a class="active" asp-area="Doctor" asp-controller="@ViewContext.RouteData.Values["Controller"]?.ToString()" asp-action="Index">@ViewContext.RouteData.Values["Controller"]?.ToString()</a>
                        </li>
                    </ul>
                </div>
            </div>

            @RenderBody()
        </main>
        <!-- MAIN -->
    </section>
    <!-- CONTENT -->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/admin.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>