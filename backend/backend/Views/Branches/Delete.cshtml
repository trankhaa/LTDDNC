@model backend.Models.Entities.Branch

@{
    ViewData["Title"] = "Delete Branch";
}

<h1>Delete Branch</h1>

<h3>Are you sure you want to delete this branch?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.BranchName)</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.BranchAddress)</dd>

        <dt class="col-sm-2">Hotline</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.BranchHotline)</dd>

        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <dt class="col-sm-2">Image</dt>
            <dd class="col-sm-10">
                <img src="@Model.ImageUrl" alt="@Model.BranchName" style="max-width: 200px;" />
            </dd>
        }
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdBranch" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>