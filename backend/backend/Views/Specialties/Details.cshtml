@model backend.Models.Entities.Specialty

@{
    ViewData["Title"] = "Specialty Details";
}

<h1>@Model.SpecialtyName</h1>

<div>
    <hr />
    <dl class="row">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <dt class="col-sm-2">Image</dt>
            <dd class="col-sm-10">
                <img src="@Model.ImageUrl" alt="@Model.SpecialtyName" style="max-width: 300px;" />
            </dd>
        }
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>
        <dt class="col-sm-2">Department</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Department.DepartmentName)</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.IdSpecialty" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>