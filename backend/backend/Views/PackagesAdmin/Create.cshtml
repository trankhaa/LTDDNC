@model backend.Models.ViewModel.PackageCreateEditViewModel

@{
    ViewData["Title"] = "Tạo Gói khám mới";
    Layout = "_Layout";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ImageUrl" class="control-label"></label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <div class="row">
                 <div class="form-group mb-3 col-md-6">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" type="number" step="1000" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                 <div class="form-group mb-3 col-md-6">
                    <label asp-for="OriginalPrice" class="control-label"></label>
                    <input asp-for="OriginalPrice" class="form-control" type="number" step="1000" />
                    <span asp-validation-for="OriginalPrice" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ItemsIncludedString" class="control-label"></label>
                <textarea asp-for="ItemsIncludedString" class="form-control" rows="5" placeholder="Ví dụ:
- Khám nội tổng quát
- Xét nghiệm máu"></textarea>
                <span asp-validation-for="ItemsIncludedString" class="text-danger"></span>
            </div>
            
            <div class="form-group form-check mb-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="Tạo mới" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}