@model backend.Models.ViewModel.UserCreateEditViewModel

@{
    ViewData["Title"] = "Tạo mới Người dùng";
}

<div class="container-fluid px-4 py-4">
    <div class="d-flex align-items-center mb-4">
        <a asp-action="Index" class="btn btn-outline-secondary me-3 rounded-pill shadow-sm" title="Quay lại danh sách">
            <i class="fas fa-arrow-left"></i>
        </a>
        <div>
            <h2 class="mb-1 text-primary">@ViewData["Title"]</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/Admin/Dashboard" class="text-decoration-none text-secondary">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none text-secondary">Quản lý Người dùng</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Tạo mới</li>
                </ol>
            </nav>
        </div>
    </div>

    <form asp-action="Create" method="post">
        <div class="card shadow-lg border-0 rounded-lg">
            <div class="card-body p-4">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger fade show mb-4" role="alert">
                    <h5 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i>Lỗi nhập liệu!</h5>
                    Vui lòng kiểm tra lại các thông tin bạn đã nhập.
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Email" class="form-label fw-semibold text-dark">
                            <i class="fas fa-envelope text-primary me-2"></i>Email <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Email" class="form-control form-control-lg" placeholder="Nhập địa chỉ email..." type="email" />
                        <span asp-validation-for="Email" class="text-danger small mt-1 d-block"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Role" class="form-label fw-semibold text-dark">
                            <i class="fas fa-user-tag text-primary me-2"></i>Vai trò <span class="text-danger">*</span>
                        </label>
                        <select asp-for="Role" class="form-select form-select-lg">
                            <option value="Patient">Patient</option>
                            <option value="Doctor">Doctor</option>
                            <option value="Admin">Admin</option>
                        </select>
                        <span asp-validation-for="Role" class="text-danger small mt-1 d-block"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Password" class="form-label fw-semibold text-dark">
                            <i class="fas fa-lock text-primary me-2"></i>Mật khẩu <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Password" class="form-control form-control-lg" placeholder="Nhập mật khẩu..." type="password" />
                        <span asp-validation-for="Password" class="text-danger small mt-1 d-block"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="ConfirmPassword" class="form-label fw-semibold text-dark">
                            <i class="fas fa-lock text-primary me-2"></i>Xác nhận mật khẩu <span class="text-danger">*</span>
                        </label>
                        <input asp-for="ConfirmPassword" class="form-control form-control-lg" placeholder="Nhập lại mật khẩu..." type="password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger small mt-1 d-block"></span>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-light text-end py-3 border-top">
                <a asp-action="Index" class="btn btn-secondary me-2 shadow-sm">
                    <i class="fas fa-times me-2"></i>Hủy
                </a>
                <button type="submit" class="btn btn-primary shadow-sm">
                    <i class="fas fa-save me-2"></i>Tạo Mới
                </button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}