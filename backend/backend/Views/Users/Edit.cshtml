@model backend.Models.ViewModel.UserCreateEditViewModel

@{
    ViewData["Title"] = "Chỉnh sửa Người dùng";
}

<div class="container-fluid px-4 py-4">
    <div class="d-flex align-items-center mb-4">
        <a asp-action="Index" class="btn btn-outline-secondary me-3">
            <i class="fas fa-arrow-left"></i>
        </a>
        <div>
            <h2 class="mb-1">@ViewData["Title"]</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/Admin/Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Quản lý Người dùng</a></li>
                    <li class="breadcrumb-item active">Chỉnh sửa</li>
                </ol>
            </nav>
        </div>
    </div>

    <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
        <div class="card shadow-sm">
            <div class="card-body p-4">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Email" class="form-label fw-semibold">
                            <i class="fas fa-envelope text-muted me-2"></i>Email
                        </label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Role" class="form-label fw-semibold">
                            <i class="fas fa-user-tag text-muted me-2"></i>Vai trò
                        </label>
                        <select asp-for="Role" class="form-select">
                            <option value="Patient">Patient</option>
                            <option value="Doctor">Doctor</option>
                            <option value="Admin">Admin</option>
                        </select>
                        <span asp-validation-for="Role" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Password" class="form-label fw-semibold">
                            <i class="fas fa-lock text-muted me-2"></i>Mật khẩu mới
                        </label>
                        <input asp-for="Password" class="form-control" placeholder="Để trống nếu không đổi" />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="ConfirmPassword" class="form-label fw-semibold">
                            <i class="fas fa-lock text-muted me-2"></i>Xác nhận mật khẩu
                        </label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-light text-end py-3">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times me-2"></i>Hủy
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Lưu Thay Đổi
                </button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}