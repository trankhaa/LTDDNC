@model backend.Models.Entities.Department

@{
    ViewData["Title"] = "Department Details";
}

<h1>@Model.DepartmentName</h1>

<div>
    <hr />
    <dl class="row">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <dt class="col-sm-2">Image</dt>
            <dd class="col-sm-10">
                <img src="@Model.ImageUrl" alt="@Model.DepartmentName" style="max-width: 300px;" />
            </dd>
        }
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>
    </dl>
</div>

<h4>Specialties</h4>
@if (ViewBag.Specialties != null && ((List<backend.Models.Entities.Specialty>)ViewBag.Specialties).Count > 0)
{
    <ul>
        @foreach (var specialty in ViewBag.Specialties)
        {
            <li>@specialty.SpecialtyName</li>
        }
    </ul>
}
else
{
    <p>No specialties found for this department.</p>
}

<div>
    <a asp-action="Edit" asp-route-id="@Model.IdDepartment" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>