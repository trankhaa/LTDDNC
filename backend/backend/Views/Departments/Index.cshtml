@model IEnumerable<backend.Models.Entities.Department>

@{
    ViewData["Title"] = "Departments";
}

<h1>Departments</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @if (!string.IsNullOrEmpty(item.ImageUrl))
                {
                    <img src="@item.ImageUrl" alt="@item.DepartmentName" style="width: 100px; height: auto;" />
                }
            </td>
            <td>@Html.DisplayFor(modelItem => item.DepartmentName)</td>
            <td>@Html.DisplayFor(modelItem => item.Description)</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.IdDepartment" class="btn btn-info">Details</a>
                <a asp-action="Edit" asp-route-id="@item.IdDepartment" class="btn btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.IdDepartment" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>