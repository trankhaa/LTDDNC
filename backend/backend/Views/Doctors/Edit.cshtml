                                    <span class="image-preview-text"
                                        style="@(string.IsNullOrEmpty(Model.ExistingCertificateImgUrl) ? "" : "display:none;")">Xem
                                        trước ảnh chứng chỉ</span>
                                </div>
                                <input type="hidden" asp-for="ExistingCertificateImgUrl" />
                            </div>

                            <!-- Ảnh bằng cấp -->
