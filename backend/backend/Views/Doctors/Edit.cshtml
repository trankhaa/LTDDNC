@model backend.Models.DTOs.Doctor.UpdateFullDoctorDto
@{
    ViewData["Title"] = "Chỉnh Sửa Thông Tin Bác Sĩ: " + Model.Name;
}

<!-- Thêm link Font Awesome (nếu chưa có) -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />

<style>
    body {
        background-color: #f8f9fa;
    }

    .card {
        border-radius: .75rem;
        border: none;
    }

    .card-header {
        background-color: #e9ecef;
        border-bottom: 1px solid #dee2e6;
    }

    .form-control:focus,
    .form-select:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, .25);
    }

    .image-preview-container {
        border: 1px dashed #ced4da;
        padding: 10px;
        border-radius: .375rem;
        text-align: center;
        min-height: 170px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: #fff;
    }

    .image-preview {
        max-width: 100%;
        max-height: 120px;
        margin-top: 5px;
        object-fit: cover;
        border-radius: .25rem;
    }

    .image-preview-text {
        color: #6c757d;
        font-size: 0.9em;
    }

    .custom-file-input-wrapper {
        position: relative;
        overflow: hidden;
        display: inline-block;
        cursor: pointer;
    }

    .custom-file-input-wrapper input[type=file] {
        position: absolute;
        font-size: 100px;
        left: 0;
        top: 0;
        opacity: 0;
        cursor: pointer;
    }

    .btn-file-upload {
        display: inline-block;
        padding: .375rem .75rem;
        font-size: 1rem;
        font-weight: 400;
        line-height: 1.5;
        color: #0d6efd;
        background-color: #e9ecef;
        border: 1px solid #ced4da;
        border-radius: .375rem;
        transition: color .15s ease-in-out, background-color .15s ease-in-out, border-color .15s ease-in-out, box-shadow .15s ease-in-out;
    }

    .btn-file-upload:hover {
        color: #fff;
        background-color: #0b5ed7;
        border-color: #0a58ca;
    }

    .file-name-display {
        display: block;
        font-size: 0.8em;
        color: #6c757d;
        margin-top: 5px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .current-image-text {
        font-size: 0.8em;
        color: #28a745;
        /* Green color for current image notification */
        margin-top: 3px;
        display: block;
    }
</style>

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-lg-10 offset-lg-1 col-xl-8 offset-xl-2">
            <h1 class="mb-4 text-primary"><i class="fas fa-edit me-2"></i>@ViewData["Title"]</h1>
            <hr class="mb-4" />

            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>
                @* ID được truyền qua route, không cần input hidden ở đây *@

                <!-- Thông tin cơ bản -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h5 class="m-0 font-weight-bold text-primary">
                            <i class="fas fa-user-circle me-2"></i>Thông tin cơ bản
                        </h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Name" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    <input asp-for="Name" class="form-control" />
                                </div>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Gender" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-venus-mars"></i></span>
                                    <select asp-for="Gender" class="form-select">
                                        <option value="">-- Chọn giới tính --</option>
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                        <option value="Other">Other</option>
                                    </select>
                                </div>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="DateOfBirth" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
