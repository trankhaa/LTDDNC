@model backend.Models.Entities.Booking.ConfirmAppointment

@{
    ViewData["Title"] = "Delete Appointment";
}

<div class="container mt-4">
    <h2>Delete Appointment</h2>
    <h4 class="text-danger">Are you sure you want to delete this appointment?</h4>
    <hr />
    
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h4>Appointment to be deleted</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Doctor Name:</dt>
                <dd class="col-sm-9">@Model.NameDr</dd>
                
                <dt class="col-sm-3">Patient Email:</dt>
                <dd class="col-sm-9">@Model.PatientEmail</dd>
                
                <dt class="col-sm-3">Appointment Date:</dt>
                <dd class="col-sm-9">@Model.Date.ToString("yyyy-MM-dd")</dd>
                
                <dt class="col-sm-3">Time Slot:</dt>
                <dd class="col-sm-9">@Model.Slot</dd>
            </dl>
        </div>
        <div class="card-footer">
            <form asp-action="Delete">
                <input type="hidden" asp-for="IdConfirmAppointment" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>